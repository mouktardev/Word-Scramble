---
// import Nav from "/src/components/Nav.jsx";
import Footer from "/src/components/Footer.jsx";
const { title } = Astro.props;
---

<html class="scroll-smooth" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, height=device-height,viewport-fit=cover,initial-scale=1.0"
    />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <!-- favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <!-- google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />

    <!-- global css -->
    <link
      rel="stylesheet"
      type="text/css"
      href={Astro.resolve("../styles/global.css")}
    />
    <!-- <link rel="stylesheet" type="text/css" href="/_astro/src/styles/algolia.css"> -->
    <!-- <link
        rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/instantsearch.css@7/themes/algolia-min.css"
        /> -->

    <!-- open graph -->
    <meta property="og:title" content="Word Game" />
    <meta property="og:description" content="puzzle game" />
    <meta property="og:type" content="website" />
    <!-- <meta property="og:url" content="https://abdullaalsari.com"> -->
    <!-- <meta property="og:image" content="/assets/social-preview-image.png"> -->
    <!-- page title -->
    <title>{title}</title>
  </head>
  <body class="bg-fuchsia-900">
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
